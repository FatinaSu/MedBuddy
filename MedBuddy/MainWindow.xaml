<Window x:Class="MedBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedBuddy"
        xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Background="{StaticResource MedBlueLight}" Grid.Row="0">
            <mdi:PackIcon Kind="Pill" Foreground="{StaticResource MedBlue}" VerticalAlignment="Center" Height="30" Width="30"/>
            <TextBlock Text="MedBuddy" VerticalAlignment="Center" FontWeight="SemiBold" FontSize="24"/>
        </DockPanel>
        <ContentControl x:Name="MainContent" Grid.Row="1"/>
    </Grid>
</Window>
