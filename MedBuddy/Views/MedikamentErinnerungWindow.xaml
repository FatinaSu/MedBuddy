<Window x:Class="MedBuddy.Views.MedikamentErinnerungWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mdi="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Medikamentenerinnerung" Height="200" Width="350" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="ToolWindow" Topmost="True">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
        <mdi:PackIcon Kind="BellRing" HorizontalAlignment="Center" Foreground="{StaticResource MedBlue}"/>
        <TextBlock x:Name="MedikamentText" Text="Medikament" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,6"/>
        <TextBlock x:Name="PatientText" Text="Patient" FontSize="16" FontWeight="Normal" TextAlignment="Center" Margin="0,0,0,12" Visibility="Collapsed"/>
        <Button Content="Medikament eingenommen" Style="{StaticResource ButtonStyle}" Click="Eingenommen_Click" FontSize="16" Padding="10,4" Width="220" HorizontalAlignment="Center"/>
    </StackPanel>
</Window> 